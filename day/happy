import java.util.Random;

public class RandomClass {

	public static void main(String[] args) {
		Random random = new Random();
		
		
		for(int i = 0; i < 5; i++) {
			
			int ran = random.nextInt(10); // 0 ~ 9까지 랜덤 출력
			System.out.println(ran);
		}
	}
}
